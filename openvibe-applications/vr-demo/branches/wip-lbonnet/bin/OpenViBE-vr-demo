#!/bin/bash

# g_GDB="gdb --args"
g_ovReferenceApplication="`pwd`/OpenViBE-vr-demo-dynamic"

export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:"`pwd`/../lib"

if [ ! -e $g_ovReferenceApplication ]; then
	echo Reference application was not found
	exit 1
fi;

cd ../share/openvibe-applications/vr-demo/$1

echo ---------------------------------------

pwd
echo $g_GDB $g_ovReferenceApplication $1

echo ---------------------------------------

$g_GDB $g_ovReferenceApplication $1
