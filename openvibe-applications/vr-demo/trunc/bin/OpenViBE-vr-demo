#!/bin/bash

# g_GDB=gdb --args
g_OMKReferenceApplication="///noway///"

if [ ! -e $g_OMKReferenceApplication ]; then
	g_OMKReferenceApplication=$OMK_BIN/bin/OMKReferenceApplication
fi;

if [ ! -e $g_OMKReferenceApplication ]; then
	g_OMKReferenceApplication=$OMK_HOME/bin/OMKReferenceApplication
fi;

if [ ! -e $g_OMKReferenceApplication ]; then
	g_OMKReferenceApplication=`which OMKReferenceApplication`
fi;

if [ ! -e $g_OMKReferenceApplication ]; then
	echo OpenMASK reference application was not found
	echo please update your OMK_BIN, OMK_HOME or PATH environment variables
	exit 1
fi;

cd $1
$g_GDB $g_OMKReferenceApplication omk/demo.omk
