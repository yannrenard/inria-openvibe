#!/bin/bash
cd "../../scripts"
source linux-init_env_command
export LD_LIBRARY_PATH=$OpenViBE_base/dist/lib:$OpenViBE_dependencies/lib:$LD_LIBRARY_PATH
export LC_ALL=C
renice 19 $$
cd "$OpenViBE_base/dist/bin"

ov_debugger=
if [ "$1" == "--debug" ]; then
        ov_debugger="gdb --args"
        shift
fi
$ov_debugger ./OpenViBE-ssvep-demo-dynamic ../share/openvibe-applications/ssvep-demo/3class-training.cfg $* &

